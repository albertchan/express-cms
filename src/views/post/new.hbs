<h4>Add a new post</h4>
<form method="post" enctype="x-www-form-urlencoded">
  <div class="form-group">
    <label for="email">Title</label>
    <input type="text" class="form-control" name="title" id="title">
  </div>
  <div class="form-group">
    <label for="email">Slug</label>
    <input type="text" class="form-control" name="slug" id="slug">
    <p class="help-block">Enter a unique slug</p>
  </div>
  <div class="form-group">
    <label for="name">Summary</label>
    <textarea class="form-control" name="summary" id="summary" rows="3"></textarea>
  </div>
  <div class="form-group">
    <label for="address1">Body</label>
    <textarea class="form-control" name="markdown" id="markdown" rows="15"></textarea>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
